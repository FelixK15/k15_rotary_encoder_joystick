{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Arduino Project",
            "type": "shell",
            "windows": {
                "command": "build.bat"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Win32 Project",
            "type": "shell",
            "windows": {
                "command": "build_sim.bat"
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
    ]
}